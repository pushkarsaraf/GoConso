<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="match_parent" app:cardBackgroundColor="@color/primaryLightColor"
        app:cardCornerRadius="5dp" app:contentPadding="10dp" app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true" app:cardUseCompatPadding="true">
    <TextView
            android:id="@+id/name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <TextView
            android:id="@+id/score"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
</androidx.cardview.widget.CardView>