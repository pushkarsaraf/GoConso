<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg1"
        android:orientation="vertical"
        android:paddingTop="10dp"
        tools:context=".MainActivity">


    <ImageView
            android:contentDescription="@string/app_title"
            android:id="@+id/title_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/title" tools:layout_editor_absoluteX="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
            android:contentDescription="@string/app_image"
            android:id="@+id/centre_image_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/centre_image"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>


    <Button
            android:theme="@style/MyButton"
            android:id="@+id/button_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="getInfo"
            android:text="@string/info"
            app:layout_constraintRight_toLeftOf="@id/button_leaderboard"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_play_tap_tiles"
            android:layout_margin="8dp"
            android:padding="8dp"/>

    <Button
            android:theme="@style/MyButton"
            android:id="@+id/button_leaderboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="getLeaderBoard"
            android:text="@string/scores"
            app:layout_constraintLeft_toRightOf="@id/button_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_play_tap_tiles"
            android:layout_margin="8dp"
            android:padding="8dp"/>

    <Button
            android:theme="@style/MyButton"
            android:id="@+id/button_play_tap_tiles"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:onClick="playTapTiles"
            android:text="@string/play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constrain